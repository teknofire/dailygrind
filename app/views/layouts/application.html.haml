!!!
%html
  %head
    %title Daily Grind
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #header.navbar.navbar-static-top
      .navbar-inner
        .container
          .pull-left= image_tag 'coffee_maker.svg', style: 'height: 40px;'
          = link_to root_url, class: 'brand' do
            Daily Grind
            
          %ul.nav.pull-right
            - if current_user.nil?
              %li
                = link_to signin_path do
                  %i.icon-lock
                  Sign In
            - else
              %li
                %p.navbar-text.balance
                  Current Balance
                  = number_to_currency current_user.balance 
                
              %li.dropdown.user
                = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, style: "background-image: url(#{avatar_url(current_user.email, '40')})" do
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to signout_path do
                      %i.icon-lock
                      Sign out
    #content.container
      = flash_messages
      = yield
